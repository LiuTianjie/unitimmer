
.container {
		position: absolute;
		display: -webkit-box;
		display: -webkit-flex;
		display: -ms-flexbox;
		display: flex;
		-webkit-box-orient: vertical;
		-webkit-box-direction: normal;
		-webkit-flex-direction: column;
		    -ms-flex-direction: column;
		        flex-direction: column;
		left: 0rpx;
		right: 0rpx;
		width: 100%;
		height: 100%;
}
.container>._p {
		z-index: 2;
		width: 180rpx;
		text-align: center;
		font-size: 20rpx;
		color: #3C3E49;
		background: rgba(255, 255, 255, .7);
		margin-left: calc(50% - 90rpx);
		border-radius: 5rpx;
}
.mainbg {
		margin: 0rpx;
		height: 100%;
		width: 100%;
		position: absolute;
		top: 0px;
		bottom: 0px;
		background-image: url('https://bing.ioliu.cn/v1/rand?w=720&h=1280');
		background-position: center;
		background-size: cover;
		background-repeat: no-repeat;
		-webkit-filter: blur(5rpx);
		        filter: blur(5rpx);
		opacity: 0.8;
}
.outlistcard {
		height: 85%;
		overflow: auto;
		z-index: 1;
}
.listcard {
		margin-top: 20rpx;
		border-radius: 20rpx;
		margin-left: 10rpx;
		margin-right: 10rpx;
}
.refreshbutton {
		z-index: 3;
		width: 50rpx;
		height: 50rpx;
		position: absolute;
		margin-left: calc(75% - 30rpx);
		margin-top: 1120rpx;
		border:3rpx solid #007AFF;
		-webkit-box-shadow: 4rpx 4rpx #007AFF;
		        box-shadow: 4rpx 4rpx #007AFF;
		border-radius: 100rpx;
		padding: 20rpx;
		background-color: #F1F1F1;
}
.addbutton {
		z-index: 2;
		margin-top: 20rpx;
		margin-left: calc(50% - 60rpx);
		width: 120rpx;
		height: 120rpx;
}


