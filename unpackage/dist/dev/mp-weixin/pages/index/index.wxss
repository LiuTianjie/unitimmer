template {
		height: 100%;
		width: 100%;
}
.mainbg {
		margin: 0rpx;
		height: 100%;
		width: 100%;
		position: absolute;
		top: 0px;
		bottom: 0px;
		background-image: url('https://bing.ioliu.cn/v1/rand?w=720&h=1280');
		background-position: center;
		background-size: cover;
		background-repeat: no-repeat;
}
.text-container {
		padding-bottom: 5rpx;
		margin-top:30%;
		margin-left: calc(50% - 85% / 2);
		width: 85%;
		position: absolute;
		background-color: rgba(255, 255, 255, 0.7);
		border-radius: 30rpx;
}
view>._div>._p {
		margin: 0 10%;
		width: 80%;
		text-align: center;
		font-family: helvetica;
}
view>._div>._p:first-child {
		margin-top: 20rpx;
		font-size: 70rpx;
}
view>._div>._p:nth-child(2) {
		margin-top: 10rpx;
		font-size: 30rpx;
}
view>._div>._p:nth-child(3) {
		width: 90%;
		margin: 40rpx 5% 0rpx 5%;
		border: 2rpx dashed #3C3E49;
		border-radius: 10rpx;
		font-size: 50rpx;
}
view>._div>._p:nth-child(4) {
		margin-top: 40rpx;
		font-size: 28rpx;
}
view>._div>._p:nth-child(5) {
		margin-top: 20rpx;
		font-size: 26rpx;
}
.poem {
		margin-top: 100rpx;
		width: 90%;
		left: 5%;
		right: 5%;
		position: absolute;
		background-color: rgba(255, 255, 255, 0.7);
		border-radius: 30rpx;
}
view>._div>.poem>._p:nth-child(1) {
		font-size: 50rpx;
		font-style: italic;
}
view>._div>.poem>._p:nth-child(2) {
		text-align: right;
		font-style: italic;
		color: #2C405A;
		font-size: 25rpx;
}
foot {
		margin-left: 39%;
		margin-right: 39%;
		top: 97%;
		border-radius: 5rpx;
		position: absolute;
		text-align: center;
		color: #000000;
		opacity: 0.8;
		font-size: 25rpx;
		background-color: #ffffff;
		font-family: helvetica;
}

